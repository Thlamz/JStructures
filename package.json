{
  "name": "jstructures",
  "version": "1.0.0",
  "description": "A JS data structure library",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.js",
  "files": ["dist/*"],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/emscripten": "^1.39.6",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "test": "jest --no-cache --runInBand",
    "glue": "python -m webidl_binder src/structures/assembly/src/interface.idl src/structures/assembly/src/glue",
    "compile:base": "yarn glue && em++ src/structures/assembly/src/heap/Heap.cpp src/structures/assembly/src/deque/Deque.cpp src/structures/assembly/src/Bindings.cpp -s EXPORT_NAME='bindings' -s ALLOW_MEMORY_GROWTH=1 -s EXPORT_ES6=1 -s USE_ES6_IMPORT_META=0 -s ASSERTIONS=1 -o0 --post-js src/structures/assembly/src/glue.js",
    "compile": "yarn compile:base -o src/structures/assembly/output.js",
    "build": "yarn clean && yarn compile && webpack --config webpack.config.js && tsc --declaration --emitDeclarationOnly --declarationDir dist/types",
    "clean": "node tools/cleanBuild.js",
    "lint": "eslint src/** test/** --config .eslintrc.js",
    "lint:fix": "eslint src/** test/** --fix --config .eslintrc.js"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
